@page "/Settings/Billing"
@model BillingModel
@{
    ViewData["Title"] = "Billing";
    ViewData["ActivePage"] = ManageNavPages.Billing;
}

<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="billing-form" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <h3>Address</h3>
            <hr class="my-4" />
            <div class="form-group">
                <label asp-for="Address.PrimaryAddress"></label>
                <input asp-for="Address.PrimaryAddress" class="form-control" />
                <span asp-validation-for="Address.PrimaryAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address.SecondaryAddress"></label>
                <input asp-for="Address.SecondaryAddress" class="form-control" />
                <span asp-validation-for="Address.SecondaryAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address.PostalCode"></label>
                <input asp-for="Address.PostalCode" class="form-control" />
                <span asp-validation-for="Address.PostalCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address.City"></label>
                <input asp-for="Address.City" class="form-control" />
                <span asp-validation-for="Address.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address.Country"></label>
                <input asp-for="Address.Country" class="form-control" />
                <span asp-validation-for="Address.Country" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address.Province"></label>
                <input asp-for="Address.Province" class="form-control" />
                <span asp-validation-for="Address.Province" class="text-danger"></span>
            </div>

            <br />

            <h3>Payment Info</h3>
            <hr class="my-4" />

            <div class="form-row mb-3">
                <div class="col">
                    <label asp-for="Payment.CardNumber">Card Number</label>
                        <input type="text" class="form-control" asp-for="Payment.CardNumber" placeholder="Card Number">
                        <span asp-validation-for="Payment.CardNumber" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row mb-3">
                <div class="col-7">
                    <label asp-for="Payment.CardExpirationDate"></label>
                    <input asp-for="Payment.CardExpirationDate" class="form-control" placeholder="MM/YY"/>
                    <span asp-validation-for="Payment.CardExpirationDate" class="text-danger"></span>
                </div>
                <div class="col">
                    <label asp-for="Payment.CardCVC"></label>
                    <input asp-for="Payment.CardCVC" class="form-control"  placeholder="Security Code"/>
                    <span asp-validation-for="Payment.CardCVC" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row mb-4">
                <div class="col">
                    <label asp-for="Payment.CardName"></label>
                    <input asp-for="Payment.CardName" class="form-control" placeholder="Full name"/>
                    <span asp-validation-for="Payment.CardName" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="col">
                    <button id="update-billing-button" type="submit" class="btn btn-primary btn-block">Save</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}