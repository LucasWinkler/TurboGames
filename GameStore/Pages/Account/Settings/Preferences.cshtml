@page
@model PreferencesModel
@{
    ViewData["Title"] = "Preferences";
    ViewData["ActivePage"] = ManageNavPages.Preferences;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="preferences-form" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.PlatformId" class="control-label"></label>
                <select asp-for="Input.PlatformId" class="form-control" asp-items="Model.Platforms">
                    <option selected="selected" value="">None</option>
                </select>
                <span asp-validation-for="Input.PlatformId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.CategoryId" class="control-label"></label>
                <select asp-for="Input.CategoryId" class="form-control" asp-items="Model.Categories">
                    <option selected="selected" value="">None</option>
                </select>
                <span asp-validation-for="Input.CategoryId" class="text-danger"></span>
            </div>
            <button id="update-preferences-button" type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}