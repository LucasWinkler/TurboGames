@page
@model GameStore.Pages.Admin.Games.EditModel

@{
    ViewData["Title"] = $"Edit {@Model.Input.Title}";
}


<h1>ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Input.Id" />
            <div class="form-group">
                <label asp-for="Input.Title" class="control-label"></label>
                <input asp-for="Input.Title" class="form-control" />
                <span asp-validation-for="Input.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Developer" class="control-label"></label>
                <input asp-for="Input.Developer" class="form-control" />
                <span asp-validation-for="Input.Developer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Description" class="control-label"></label>
                <input asp-for="Input.Description" class="form-control" />
                <span asp-validation-for="Input.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.PlatformId" class="control-label">Platform</label>
                <select asp-for="Input.PlatformId" class="form-control" asp-items="Model.Platforms"></select>
            </div>
            <div class="form-group">
                <label asp-for="Input.CategoryId" class="control-label">Category</label>
                <select asp-for="Input.CategoryId" class="form-control" asp-items="Model.Categories"></select>
            </div>
            <div class="form-group">
                <label asp-for="Input.Price" class="control-label"></label>
                <input asp-for="Input.Price" class="form-control" />
                <span asp-validation-for="Input.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
