@page
@model GameStore.Web.Pages.Admin.Games.DeleteModel

@{
    ViewData["Title"] = $"Delete '{Model.Game.Title}'";
    ViewData["ActivePage"] = DashboardNavPages.Games;
}

<h2>@ViewData["Title"]</h2>
<div>
    <h4>Game</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game.Developer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.Developer)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game.TotalRating)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.TotalRating)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.Category.Name)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Game.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to game list</a>
    </form>
</div>
