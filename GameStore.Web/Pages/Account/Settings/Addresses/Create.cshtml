@page "/Settings/Addresses/Add"
@model CreateModel
@using GameStore.Web.Helpers
@{
    ViewData["Title"] = "Add a new address";
    ViewData["ActivePage"] = ManageNavPages.Address;
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-page="/Account/Settings/Index">Settings</a></li>
        <li class="breadcrumb-item"><a asp-page="./Index">Addresses</a></li>
        <li class="breadcrumb-item active" aria-current="page">Add</li>
    </ol>
</nav>
<h4>@ViewData["Title"]</h4>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Address.FullName" class="control-label"></label>
                <input asp-for="Address.FullName" class="form-control" />
                <span asp-validation-for="Address.FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address.StreetAddress" class="control-label"></label>
                <input asp-for="Address.StreetAddress" class="form-control" />
                <span asp-validation-for="Address.StreetAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address.City" class="control-label"></label>
                <input asp-for="Address.City" class="form-control" />
                <span asp-validation-for="Address.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address.StateProvinceRegion" class="control-label"></label>
                <input asp-for="Address.StateProvinceRegion" class="form-control" />
                <span asp-validation-for="Address.StateProvinceRegion" class="text-danger"></span>
            </div>
            @*
                TODO: Show provinces and states in a dropdown.
                      If a province is selected then country is Canada.
                      If a state is selected then country is the United States.
                      Also have a Not Applicable option.

                      OR

                      Show countries in a dropdown.
                      If country is Canada show list of provinces in dropdown.
                      Else show a textbox for state/region input.
            *@
            <div class="form-group">
                <label asp-for="Address.PostalCode" class="control-label"></label>
                <input asp-for="Address.PostalCode" class="form-control" />
                <span asp-validation-for="Address.PostalCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary btn-block" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to your addresses</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
