@page
@model ReviewModel

@{
    ViewData["Title"] = "Manage Review";
}

<h1>Review @ViewData["GameTitle"]</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Input.GameId" readonly />
            <div class="form-group">
                <label asp-for="Input.Content" class="control-label"></label>
                <textarea asp-for="Input.Content" class="form-control"></textarea>
                <span asp-validation-for="Input.Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Rating" class="control-label"></label>
                <input type="number" asp-for="Input.Rating" class="form-control" />
                <span asp-validation-for="Input.Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add Review" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
